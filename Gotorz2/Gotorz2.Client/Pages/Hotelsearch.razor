@page "/hotelsearch"
@rendermode InteractiveAuto
@using Gotorz2.Client.Models
@using Gotorz2.Client.Services
@using System.Net.Http.Json
@using System.Text.Json
@inject NavigationManager NavigationManager
@inject HotelApiService HotelService

<h3 class="mt-4">Søg efter Hoteller</h3>

<div class="container mt-3">
    <div class="row mb-3">
        <div class="col-md-4">
            <label>By:</label>
            <input type="text" @bind="City" class="form-control" placeholder="Indtast by (f.eks. CPH)" />
        </div>
        <div class="col-md-4">
            <label>Check-in Dato:</label>
            <input type="date" @bind-value="CheckInDate" class="form-control" />
        </div>
        <div class="col-md-4">
            <label>Check-out Dato:</label>
            <input type="date" @bind-value="CheckOutDate" class="form-control" />
        </div>
    </div>

    <button class="btn btn-primary mb-4" @onclick="SearchHotelsAsync">Søg Hoteller</button>

    @if (hotels != null && hotels.Any())
    {
        <div class="row">
            @foreach (var hotel in hotels)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        @if (hotel.Pictures != null && hotel.Pictures.Any())
                        {
                            <img src="@hotel.Pictures.FirstOrDefault()?.Uri" class="card-img-top" alt="@hotel.Name" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@hotel.Name</h5>
                            <p class="card-text">
                                <strong>Adresse:</strong> @hotel.Address?.Line, @hotel.Address?.City, @hotel.Address?.Country<br />
                                <strong>Pris pr. nat:</strong> @(hotel.RatePlan?.Price?.Total.ToString("C"))<br />
                                <strong>Stjerner:</strong> @(hotel.StarRating ?? 0)
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    
    else if (hotels != null)
    {
        <p class="text-danger">Ingen hoteller fundet.</p>
    }

</div>

@code {
    private string City { get; set; } = string.Empty;
    private DateTime CheckInDate { get; set; } = DateTime.Today;
    private DateTime CheckOutDate { get; set; } = DateTime.Today.AddDays(9);

    private List<AccommodationData> hotels;

    private async Task SearchHotelsAsync()
    {
        try
        {
            var checkInDateStr = CheckInDate.ToString("yyyy-MM-dd");
            var checkOutDateStr = CheckOutDate.ToString("yyyy-MM-dd");

            // Send datoerne som strings
            hotels = await HotelService.SearchHotelsAsync(City, checkInDateStr, checkOutDateStr);

            Console.WriteLine($"Antal hoteller fundet: {hotels?.Count}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching hotels: {ex.Message}");
        }
    }

}

