@page "/customerpage"
@rendermode InteractiveAuto
@inject NavigationManager NavigationManager
@inject Gotorz2.Client.Services.TravelPackageState TravelPackageState

<div class="main-layout">
	<!-- Navigation Bar -->
	<nav class="navbar">
		<div class="nav-left">
			<img src="Images/Gotorzlogo.png" alt="Logo" class="logo" />
		</div>
		<div class="nav-center">
			<a href="#">Travel Packages</a>
			<a href="#">Travel Information</a>
			<a href="#">Customer Service</a>
		</div>
		<div class="nav-right">
			<img src="Images/earthicon.jpg" class="icon" />
			<select class="lang-select">
				<option>DK</option>
				<option>EN</option>
			</select>
			<button class="login-btn">Login</button>
		</div>
	</nav>

	<!-- Hero Banner -->
	<header class="hero-banner">
		<img src="Images/imagetravelheader.jpg" alt="Travel Banner" class="travel-banner" />
		<div class="hero-text">
			<img src="Images/travelbettericon.png" alt="Travel Better" class="hero-logo" />
		</div>
	</header>

	<!-- Destinations -->
	<section class="destinations">
		<h2>Discover our hottest destinations</h2>
		<div class="destination-grid">
			@foreach (var package in TravelPackageState.PublishedPackages)
			{
				<div class="destination-card">
					@* <img src="@package.Hotel?.imageUrl" alt="@package.TripTitle" class="card-image" /> *@
					<h3>@package.TripTitle</h3>
					<p>@package.Description</p>
					<button class="price-btn">From @package.TripTotalPrice.ToString("C")</button>
				</div>
			}
		</div>
	</section>

	<!-- Footer -->
	<footer class="footer">
		<h4>Gotorz Social Media</h4>
		<div class="social-icons">
			<i class="fab fa-facebook"></i>
			<i class="fab fa-twitter"></i>
			<i class="fab fa-instagram"></i>
			<i class="fab fa-linkedin"></i>
			<i class="fab fa-youtube"></i>
		</div>
	</footer>
</div>


<style>

	body {
		margin: 0;
		font-family: Arial, sans-serif;
		background-color: #f8f9fa;
	}

	/* NAVIGATION */
	.navbar {
		display: flex;
		justify-content: space-between;
		align-items: center;
		background-color: #468ef9;
		color: white;
		padding: 1rem 2rem;
	}

	.nav-left .logo {
		height: 80px;
	}

	.nav-center a {
		color: white;
		text-decoration: none;
		margin: 0 1rem;
		font-weight: bold;
	}

	.nav-right {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.icon,
	.lang-select,
	.login-btn {
		height: 40px;
		display: flex;
		align-items: center;
		padding: 0.5rem 0.75rem;
		border-radius: 5px;
	}

	.icon {
		background-color: #468ef9;
	}

	.lang-select {
		border: none;
	}

	.login-btn {
		background-color: white;
		color: #468ef9;
		border: none;
		cursor: pointer;
	}

	/* HERO */
	.hero-banner {
		position: relative;
		height: 80vh; /* fx: 80% af viewportens højde */
	}

		.hero-banner img {
			width: 100%;
			height: 45%;
			object-fit: cover;
			display: block;
		}


	.hero-text {
		position: absolute;
		top: 20px;
		right: 20px; /* Brug "right" i stedet for "left" */
	}

	.hero-logo {
		width: 100%;
		max-width: 300px;
		height: auto;
	}



	/* DESTINATIONS */
	.destinations {
		padding: 2rem;
		text-align: center;
	}

	.destination-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 1.5rem;
		margin-top: 1rem;
	}

	.destination-card {
		background-color: white;
		border-radius: 8px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		overflow: hidden;
		padding: 1rem;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.card-image {
		width: 100%;
		height: 150px;
		object-fit: cover;
		border-radius: 5px;
	}

	.price-btn {
		margin-top: auto;
		background-color: #007bff;
		color: white;
		border: none;
		padding: 0.5rem 1rem;
		border-radius: 5px;
		cursor: pointer;
	}

	/* FOOTER */
	.footer {
		background-color: #222;
		color: white;
		padding: 2rem;
		text-align: center;
	}

	.social-icons i {
		font-size: 1.5rem;
		margin: 0 0.5rem;
		cursor: pointer;



	}



</style>

