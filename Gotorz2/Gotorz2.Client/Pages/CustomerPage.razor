@page "/customerpage"
@rendermode InteractiveAuto
@inject NavigationManager NavigationManager
@inject Gotorz2.Client.Services.TravelPackageState TravelPackageState

<div class="main-layout">
	<!-- Navigation Bar -->
	<nav class="navbar">
		<div class="nav-left">
			<img src="Images/Gotorzlogo.png" alt="Logo" class="logo" />
		</div>

		<!-- Saml alt i højre side -->
		<div class="nav-right">
			<div class="top-row">
				<img src="Images/earthicon.jpg" class="icon" />
				<select class="lang-select">
					<option>DK</option>
					<option>EN</option>
				</select>
				<!-- Login knappen navigerer til '/fetchdata' -->
				<button class="login-btn" @onclick="NavigateToFetchData">Login</button>
			</div>

			<div class="nav-center">
				<a href="#">Travel Packages</a>
				<a href="#">Travel Information</a>
				<a href="#">Customer Service</a>
			</div>
		</div>
	</nav>

	<!-- Hero Banner -->
	<header class="hero-banner">
		<img src="Images/imagetravelheader.jpg" alt="Travel Banner" class="travel-banner" />
		<div class="hero-text">
			<img src="Images/travelbettericon.png" alt="Travel Better" class="hero-logo" />
		</div>
	</header>

	<!-- Destinations -->
	<section class="destinations">
		<div class="destination-header">
			<img src="Images/travelpackageicon.png" alt="Logo" class="travelpackageicon" />
			<h1>Discover our hottest destinations</h1>
		</div>

		<div class="destination-grid">
			@foreach (var package in TravelPackageState.PublishedPackages)
			{
				<div class="destination-card">
					<h3>@package.TripTitle</h3>
					<p>@package.Description</p>
					<button class="price-btn">From @package.TripTotalPrice.ToString("C")</button>
				</div>
			}
		</div>
	</section>

	<!-- Footer -->
	<footer class="footer">
		<h4>Gotorz Social Media</h4>
		<div class="social-icons">
			<i class="fab fa-facebook"></i>
			<i class="fab fa-twitter"></i>
			<i class="fab fa-instagram"></i>
			<i class="fab fa-linkedin"></i>
			<i class="fab fa-youtube"></i>
		</div>
	</footer>
</div>


<style>

	body {
		margin: 0;
		font-family: Arial, sans-serif;
		background-color: #f8f9fa;
	}

	/* NAVIGATION */
	.navbar {
		display: flex;
		justify-content: space-between;
		align-items: flex-start; /* Så nav-rights kolonne passer */
		padding: 1rem 2rem;
		background-color: #468ef9;
		color: white;
		flex-wrap: wrap; /* Gør layout fleksibelt */
	}

	.nav-left .logo {
		height: 80px;
	}

	.nav-center a {
		color: white;
		text-decoration: none;
		margin: 0 1rem;
		font-weight: bold;
	}

	/* Højre side bliver en kolonne */
	.nav-right {
		display: flex;
		flex-direction: column;
		align-items: flex-end;
		gap: 0.5rem;
	}


	.top-row {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	/* Links under sprogvalg/login */
	.nav-center {
		display: flex;
		flex-direction: row;
		gap: 1rem;
	}

		.nav-center a {
			color: white;
			text-decoration: none;
			font-weight: bold;
		}

	.icon {
		height: 40px;
		width: 40px;
		object-fit: cover;
		border-radius: 5px;
		background-color: transparent; /* Fjerner hvid baggrund */
		padding: 0; /* Fjern padding */
		border: none;
	}

	/* Ens stil for sprogvalg og knap */
	.lang-select,
	.login-btn {
		height: 40px;
		padding: 0 0.75rem;
		border-radius: 5px;
		display: flex;
		align-items: center;
		border: none;
	}

	.login-btn {
		background-color: white;
		color: #468ef9;
		cursor: pointer;
	}

	/* HERO */
	/* HERO */
	.hero-banner {
		position: relative;
		height: 80vh; /* fx: 80% af viewportens højde */
		margin-bottom: 0; /* Sørg for at fjerne eventuel margin */
	}

		.hero-banner img {
			width: 100%;
			height: 45%;
			object-fit: cover;
			display: block;
			margin-bottom: 0; /* Fjern marginen på billedet */
		}

	.hero-text {
		position: absolute;
		top: 20px;
		right: 20px; /* Brug "right" i stedet for "left" */
	}

	.hero-logo {
		width: 100%;
		max-width: 300px;
		height: auto;
	}


	/* DESTINATIONS */

	/* DESTINATIONS */
	.destinations {
		padding: 0;
		display: flex; /* Brug flexbox for at placere elementerne korrekt */
		flex-direction: column;
		justify-content: flex-start; /* Sørger for, at indholdet starter fra toppen */
		align-items: flex-start; /* Placerer indholdet til venstre */
		margin-top: 0; /* Fjern ekstra margin mellem header og destinations sektionen */
	}

	.destination-header {
		display: flex;
		flex-direction: column;
		align-items: flex-start; /* Justerer både billede og tekst til venstre */
		margin-top: 0; /* Fjern marginen før destination-header */
		margin-bottom: 1rem; /* Giver lidt luft mellem headeren og destination grid */
	}

	.travelpackageicon {
		height: 80px;
		margin-bottom: 0.5rem; /* Giver lidt mellemrum mellem ikon og tekst */
	}

	h1 {
		margin: 0;
		font-size: 2rem;
		color: #333;
		text-align: left; /* Justerer overskriften til venstre */
	}

	.destination-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		width: 100%;
		gap: 1.5rem;
		margin-top: 0; /* Sørg for at der ikke er ekstra mellemrum før destination grid */
	}

	.destination-card {
		background-color: white;
		border-radius: 8px;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		overflow: hidden;
		padding: 1rem;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.card-image {
		width: 100%;
		height: 150px;
		object-fit: cover;
		border-radius: 5px;
	}

	.price-btn {
		margin-top: auto;
		background-color: #007bff;
		color: white;
		border: none;
		padding: 0.5rem 1rem;
		border-radius: 5px;
		cursor: pointer;
	}

	/* FOOTER */
	.footer {
		background-color: #222;
		color: white;
		padding: 2rem;
		text-align: center;
	}

	.social-icons i {
		font-size: 1.5rem;
		margin: 0 0.5rem;
		cursor: pointer;
	}



</style>

@code {

	// Hændelse for login-knappen
	private void NavigateToFetchData()
	{
		NavigationManager.NavigateTo("/fetchdata");
	}


}